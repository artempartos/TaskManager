%h1= "Tasks"
= link_to 'Create new task', new_task_path

%table{ border: 1, cellpadding: 0, cellspacing: 0 }
  %thead
    %tr
      %td Task
      %td Description
      %td{ colspan: 3 } Actions
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.title
        %td= task.description
        %td= link_to 'Show', task_path(task)
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure?" }
